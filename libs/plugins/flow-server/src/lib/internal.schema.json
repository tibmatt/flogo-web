{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "#/definitions/Metadata"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/link"
      }
    },
    "errorHandler": {
      "tasks": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/task"
        }
      },
      "links": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/link"
        }
      }
    }
  },
  "definitions": {
    "Metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "input": {
          "$ref": "#/definitions/Metadata/definitions/AttributeCollection"
        },
        "output": {
          "$ref": "#/definitions/Metadata/definitions/AttributeCollection"
        }
      },
      "definitions": {
        "AttributeCollection": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Metadata/definitions/Attribute"
          }
        },
        "Attribute": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "type"
          ]
        }
      }
    },
    "attribute": {
      "title": "attribute",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "string",
            "integer",
            "int",
            "long",
            "number",
            "double",
            "boolean",
            "bool",
            "object",
            "array",
            "params",
            "any",
            "complexObject",
            "complex_object",
            "bytes"
          ]
        },
        "value": {
          "type": [
            "string",
            "integer",
            "number",
            "boolean",
            "object",
            "array",
            "null"
          ]
        }
      }
    },
    "link": {
      "title": "link",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "from": {
          "type": [
            "integer",
            "string"
          ]
        },
        "to": {
          "type": [
            "integer",
            "string"
          ]
        },
        "type": {
          "type": "integer"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "from",
        "to"
      ]
    },
    "task": {
      "title": "task",
      "type": "object",
      "properties": {
        "id": {
          "type": [
            "integer",
            "string"
          ]
        },
        "type": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "activityRef": {
          "type": "string",
          "default": ""
        },
        "attributes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/attribute"
          }
        },
        "settings": {
          "type": "object",
          "properties": {
            "iterate": {
              "type": [
                "string",
                "integer"
              ]
            },
            "flowPath": {
              "type": "string"
            }
          }
        },
        "inputMappings": {
          "type": "object"
        }
      },
      "required": [
        "id",
        "activityRef"
      ],
      "if": {
        "properties": {
          "type": {
            "const": 4
          }
        }
      },
      "then": {
        "properties": {
          "settings": {
            "default": {},
            "required": [
              "flowPath"
            ]
          }
        }
      },
      "else": {
        "required": [
          "activityRef"
        ],
        "if": {
          "properties": {
            "type": {
              "const": 2
            }
          }
        },
        "then": {
          "properties": {
            "settings": {
              "default": {},
              "required": [
                "iterate"
              ]
            }
          }
        }
      }
    }
  }
}
